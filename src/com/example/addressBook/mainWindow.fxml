<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.addressBook.Controller">
        <TableView GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn text="First Name" />
                <TableColumn text="Last Name" />
                <TableColumn text="Phone Number" />
                <TableColumn prefWidth="81.0" text="Notes" />
            </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
        </TableView>
</GridPane>
